{{#if successMessage}}
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4>{{successMessage}}</h4>
  </div>
{{/if}}
{{#if errorMessage}}
    <div class="alert alert-error"> {{unbound errorMessage}} </div>
{{/if}}
<div class="container">
<h1 class="hero-statement text-center">Invitation</h1>
<div class="border-block">
	    <table class="table table-striped table-hover table-bordered">
		    <thead>
          <tr>
            <th>Name</th>
            <th>Inviter</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#if model }}
            {{#each model}}
              <tr>
                <td>
                  <p>{{groupname}}</p>
                </td>
                <td>
                  <p>{{inviter}}</p>
                </td>
                <td>
                 <button class="btn btn-success" {{action 'accept' id}}>Accept</button>
                 <button class="btn btn-danger" {{action 'deny' id}}>Deny</button>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
                <td colspan="3">
                  <p><center>No invitation found.</center></p>
              </td>
              </tr>
          {{/if}}
		    </tbody>
	    </table>
</div>
</div>